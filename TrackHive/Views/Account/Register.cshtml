@model TrackHive.Models.Auth.RegisterOrganizationViewModel
@{
    ViewData["Title"] = "Create Organization • TrackHive";
    Layout = "_Layout";
}
<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        <div class="text-center mb-4">
                            <div class="fs-2">🐝</div>
                            <h1 class="h4 fw-bold mt-2 mb-0">Create your organization</h1>
                            <div class="text-muted small">You’ll be the Super Admin (IT).</div>
                        </div>

                        <form asp-action="Register" asp-controller="Account" method="post">
                            @Html.AntiForgeryToken()

                            <div class="mb-3">
                                <label asp-for="OrganizationName" class="form-label"></label>
                                <input asp-for="OrganizationName" class="form-control" />
                                <span class="field-error-slot"><span asp-validation-for="OrganizationName" class="text-danger small"></span></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="AdminName" class="form-label"></label>
                                <input asp-for="AdminName" class="form-control" />
                                <span class="field-error-slot"><span asp-validation-for="AdminName" class="text-danger small"></span></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control" autocomplete="username" />
                                <span class="field-error-slot"><span asp-validation-for="Email" class="text-danger small"></span></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Password" class="form-label"></label>
                                <input asp-for="Password" class="form-control" autocomplete="new-password" />
                                <span class="field-error-slot"><span asp-validation-for="Password" class="text-danger small"></span></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ConfirmPassword" class="form-label"></label>
                                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" />
                                <span class="field-error-slot"><span asp-validation-for="ConfirmPassword" class="text-danger small"></span></span>
                            </div>

                            <button type="submit" class="btn btn-primary w-100">Create Organization</button>
                        </form>
                    </div>
                </div>
                <div class="text-center text-muted small mt-3">
                    Already have an account?
                    <a asp-controller="Account" asp-action="Login" class="text-decoration-none">Log in</a>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
