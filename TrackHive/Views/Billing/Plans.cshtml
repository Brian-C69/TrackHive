@model TrackHive.Models.Billing.BillingPlansViewModel
@{
    Layout = "_Layout.App";
    ViewData["Title"] = "Plans";
}

<section class="py-4">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="h4 fw-bold mb-0">Plans & Pricing</h1>
            <span class="badge bg-info-subtle text-dark border">
                Current: <strong class="ms-1">@Model.CurrentPlan</strong>
                <span class="ms-2">•</span>
                <span class="ms-2">Employee limit: <strong>@Model.EmployeeLimit</strong></span>
            </span>
        </div>
        <p class="text-muted mb-4">Pick a plan that fits your team. You can upgrade anytime.</p>

        <div class="row g-4 align-items-stretch">
            <!-- Free -->
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 @(Model.CurrentPlan.Equals("Free", System.StringComparison.OrdinalIgnoreCase) ? "border-success" : "shadow-sm")">
                    <div class="card-body d-flex flex-column">
                        <h6 class="text-uppercase text-success mb-2">Free</h6>
                        <h3 class="fw-bold mb-0">RM0<span class="fs-6 fw-normal text-muted">/month</span></h3>
                        <p class="mt-2 text-muted">Kickstart without payment.</p>
                        <hr />
                        <ul class="list-unstyled small mb-4">
                            <li class="mb-2">✅ 1 HR admin</li>
                            <li class="mb-2">✅ Up to <b>5 employees</b></li>
                            <li class="mb-2">✅ Attendance & leave</li>
                            <li class="mb-2">— No payroll export</li>
                            <li class="mb-2">— 3-month data retention</li>
                        </ul>
                        <div class="mt-auto">
                            @if (Model.CurrentPlan.Equals("Free", System.StringComparison.OrdinalIgnoreCase))
                            {
                                <button class="btn btn-success w-100" disabled>Current Plan</button>
                            }
                            else
                            {
                                <a class="btn btn-outline-success w-100" href="#">Switch to Free</a>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Starter -->
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 @(Model.CurrentPlan.Equals("Starter", System.StringComparison.OrdinalIgnoreCase) ? "border-primary" : "shadow-sm")">
                    <div class="card-body d-flex flex-column">
                        <h6 class="text-uppercase text-muted mb-2">Starter</h6>
                        <h3 class="fw-bold mb-0">RM49<span class="fs-6 fw-normal text-muted">/month</span></h3>
                        <p class="mt-2 text-muted">For small teams beyond free limits.</p>
                        <hr />
                        <ul class="list-unstyled small mb-4">
                            <li class="mb-2">✅ Everything in Free</li>
                            <li class="mb-2">✅ More HR admins</li>
                            <li class="mb-2">✅ >5 employees</li>
                            <li class="mb-2">— Payroll & analytics not included</li>
                        </ul>
                        <div class="mt-auto">
                            @if (Model.CurrentPlan.Equals("Starter", System.StringComparison.OrdinalIgnoreCase))
                            {
                                <button class="btn btn-primary w-100" disabled>Current Plan</button>
                            }
                            else
                            {
                                <a class="btn btn-outline-primary w-100" href="#">Choose Starter</a>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pro (Most popular) -->
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 @(Model.CurrentPlan.Equals("Pro", System.StringComparison.OrdinalIgnoreCase) ? "border-primary" : "shadow")">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="text-uppercase text-primary mb-2">Pro</h6>
                            <span class="badge bg-primary-subtle text-primary border border-primary">Most popular</span>
                        </div>
                        <h3 class="fw-bold mb-0">RM99<span class="fs-6 fw-normal text-muted">/month</span></h3>
                        <p class="mt-2 text-muted">Adds payroll & analytics.</p>
                        <hr />
                        <ul class="list-unstyled small mb-4">
                            <li class="mb-2">✅ Everything in Starter</li>
                            <li class="mb-2">✅ Payroll calculation & exports</li>
                            <li class="mb-2">✅ Lateness, OT & deductions</li>
                            <li class="mb-2">✅ Analytics dashboard (Chart.js)</li>
                        </ul>
                        <div class="mt-auto">
                            @if (Model.CurrentPlan.Equals("Pro", System.StringComparison.OrdinalIgnoreCase))
                            {
                                <button class="btn btn-primary w-100" disabled>Current Plan</button>
                            }
                            else
                            {
                                <a class="btn btn-primary w-100" href="#">Upgrade to Pro</a>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Enterprise -->
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 @(Model.CurrentPlan.Equals("Enterprise", System.StringComparison.OrdinalIgnoreCase) ? "border-primary" : "shadow-sm")">
                    <div class="card-body d-flex flex-column">
                        <h6 class="text-uppercase text-muted mb-2">Enterprise</h6>
                        <h3 class="fw-bold mb-0">RM149<span class="fs-6 fw-normal text-muted">/month</span></h3>
                        <p class="mt-2 text-muted">All features + custom integrations.</p>
                        <hr />
                        <ul class="list-unstyled small mb-4">
                            <li class="mb-2">✅ Everything in Pro</li>
                            <li class="mb-2">✅ Advanced role policies & audit</li>
                            <li class="mb-2">✅ SSO / email / payroll integrations</li>
                            <li class="mb-2">✅ Priority support</li>
                        </ul>
                        <div class="mt-auto">
                            @if (Model.CurrentPlan.Equals("Enterprise", System.StringComparison.OrdinalIgnoreCase))
                            {
                                <button class="btn btn-outline-primary w-100" disabled>Current Plan</button>
                            }
                            else
                            {
                                <a class="btn btn-outline-primary w-100" href="#">Contact Sales</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <p class="text-muted small mt-4">Prices shown are per organization per month. Change plan anytime.</p>
    </div>
</section>
