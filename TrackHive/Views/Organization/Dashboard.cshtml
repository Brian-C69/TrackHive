@model TrackHive.Models.Dashboard.ITDashboardViewModel
@{
    Layout = "_Layout.App"; /* use sidebar/app shell */
    ViewData["Title"] = "Dashboard • " + Model.OrganizationName;
}

<section class="py-4">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <h1 class="h4 fw-bold mb-0">🐝 @Model.OrganizationName</h1>
            <span class="badge bg-secondary">IT Admin</span>
        </div>
        <p class="text-muted mb-3">Manage your organization and invite your HR team to get started.</p>

        @* Upgrade banner when reaching free cap *@
        @if (Model.EmployeesCount >= Model.EmployeeLimit)
        {
            <div class="alert alert-warning d-flex align-items-center" role="alert">
                <div class="me-2">🚧</div>
                <div>
                    You’ve reached your free tier limit of @Model.EmployeeLimit employees.
                    <a asp-controller="Billing" asp-action="Plans" class="alert-link ms-1">Upgrade your plan</a>
                    to add more.
                </div>
            </div>
        }

        <div class="row g-4 mb-4">
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h6 class="text-muted">Current Plan</h6>
                        <h4 class="fw-bold mb-2">@Model.CurrentPlan</h4>
                        <a asp-controller="Billing" asp-action="Plans" class="btn btn-outline-primary btn-sm">
                            View Plans
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h6 class="text-muted">HR Accounts</h6>
                        <h4 class="fw-bold mb-2">@Model.HrsCount</h4>
                        <a asp-controller="Admin" asp-action="InviteHr" class="btn btn-primary btn-sm">Invite HR</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h6 class="text-muted">Employees</h6>
                        <h4 class="fw-bold mb-2">@Model.EmployeesCount</h4>
                        <a asp-controller="Hr" asp-action="InviteEmployee" class="btn btn-outline-primary btn-sm">Invite Employee</a>
                    </div>
                </div>
            </div>
        </div>

        <h5 class="fw-bold mb-3">Quick Actions</h5>
        <div class="list-group">
            <a asp-controller="Organization" asp-action="Settings" class="list-group-item list-group-item-action">
                ⚙️ Organization Settings
            </a>
            <a asp-controller="LeavePolicy" asp-action="Index" class="list-group-item list-group-item-action">
                📅 Set Leave Policies
            </a>
            <a asp-controller="Attendance" asp-action="Index" class="list-group-item list-group-item-action">
                🕒 View Attendance
            </a>
        </div>
    </div>
</section>
