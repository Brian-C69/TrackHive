@model TrackHive.Models.Dashboard.ITDashboardViewModel
@{
    ViewData["Title"] = "Dashboard • " + Model.OrganizationName;
}

<section class="py-5">
    <div class="container">
        <h1 class="fw-bold mb-4">🐝 Welcome, IT Admin</h1>
        <p class="text-muted">Manage your organization and invite your HR team to get started.</p>

        <div class="row g-4 mb-5">
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h6 class="text-muted">Current Plan</h6>
                        <h4 class="fw-bold">@Model.CurrentPlan</h4>
                        <a href="#pricing" class="btn btn-outline-primary btn-sm mt-2">Upgrade Plan</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h6 class="text-muted">HR Accounts</h6>
                        <h4 class="fw-bold">@Model.HrsCount</h4>
                        <a asp-controller="Organization" asp-action="InviteHr" class="btn btn-primary btn-sm mt-2">Invite HR</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h6 class="text-muted">Employees</h6>
                        <h4 class="fw-bold">@Model.EmployeesCount</h4>
                        <a asp-controller="Employees" asp-action="Index" class="btn btn-outline-primary btn-sm mt-2">Manage Employees</a>
                    </div>
                </div>
            </div>
        </div>

        <h5 class="fw-bold mb-3">Quick Actions</h5>
        <div class="list-group">
            <a asp-controller="Organization" asp-action="Settings" class="list-group-item list-group-item-action">
                ⚙️ Organization Settings
            </a>
            <a asp-controller="LeavePolicy" asp-action="Index" class="list-group-item list-group-item-action">
                📅 Set Leave Policies
            </a>
            <a asp-controller="Attendance" asp-action="Index" class="list-group-item list-group-item-action">
                🕒 View Attendance
            </a>
        </div>
    </div>
</section>
