@{
    var title = ViewData["Title"] as string ?? "TrackHive";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous">

    <style>
        html {
            scroll-behavior: smooth;
        }

        /* Reserve vertical space for field errors (1 line of small text) */
        .field-error-slot {
            min-height: 20px;
            display: block;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-semibold" asp-controller="Home" asp-action="Index">
                🐝 TrackHive
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                    aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="features">Features</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="roles">Roles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="how">How it works</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="faq">FAQ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="pricing">Plans</a>
                    </li>
                </ul>

                @{
                    var c = ViewContext.RouteData.Values["Controller"]?.ToString();
                    var a = ViewContext.RouteData.Values["Action"]?.ToString();
                    var isLogin = c == "Account" && a == "Login";
                }
                <div class="d-flex ms-lg-3">
                    @if (!isLogin)
                    {
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary me-2">Log In</a>
                    }
                    <a asp-controller="Account" asp-action="Register" class="btn btn-primary">Get Started</a>
                </div>

            </div>
        </div>
    </nav>



    <!-- Main Content -->
    <main class="flex-grow-1">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="border-top py-4 mt-5 bg-light">
        <div class="container text-center text-muted small">
            © @DateTime.UtcNow.Year TrackHive — Attendance • Leave • Payroll
        </div>
    </footer>

    <!-- Bootstrap JS (with Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
